extends ../layout

block content
  h1= title
  p Welcome to #{title}
  div(id="timeline")

block foot
  script.
    var socket = io.connect('http://localhost:8080');
    socket.on('connect', function(data) {
        socket.emit('join', 'Hello World from client');
    });
    socket.on('messages', function(data) {
                $('#timeline').append(data);
    });
